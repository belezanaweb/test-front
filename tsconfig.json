{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "jsx": "preserve",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["src/types", "node_modules/@types"],
     "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
